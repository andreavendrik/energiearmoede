// out: style.css, sourcemap: true, compress: true
yellow = #fdea4d
blue = #005A73
bluemiddle = #005A73
bluelight = #005A73
black = #1E1E1E
broodtekstfont(font-size=16px,line-height=22px)
  font-size font-size
  line-height line-height
  font-family adelle sans, sans-serif
  font-weight 300
  color black

kopfont(font-size=40px, font-weight=400)
  font-family bree serif, sans-serif
  font-weight font-weight
  font-size font-size
  color black

bodytext()
  broodtekstfont()

posttitle()
  kopfont(30px)

categorytitle()
  posttitle(30px)

*
  padding 0
  margin 0

a
  color blue
  &:hover
    color blue
    transition 0.3s

h1
  posttitle()

h2
  categorytitle()

h3
  posttitle(font-size=20px)
  font-weight 200
  margin-top 30px
  margin-bottom 50px

h2 a
  text-decoration: none
  color black

h4
  text-transform uppercase
  broodtekstfont(12px,12px)
  margin 10px 0px 25px 0px

p
  bodytext()

.site-wrapper
  max-width 1100px
  margin-left auto
  margin-right auto

.navigation
  kopfont(18px,200)
  position fixed
  height 60px
  z-index 999
  background-color white
  display flex
  width 100%
  left 0
  justify-content space-between
  align-items center
  box-sizing border-box
  box-shadow 0px 0px 5px 1px rgba(30,30,30,0.2)
  a
    text-decoration none

#navigation-items
  width 1100px
  max-width 100%
  margin auto
  img
    width 190px
    border 1 px solid black
    box-shadow 0px 0px 5px 1px rgba(30,30,30,0.2)
    position absolute
    top 0
    margin-left 20px

.category-data
  &:before
    content ''
    width 30px
    height 30px
    background-color white
    position absolute
    top 0px
    left -15px
    transform rotate(45deg)

.menu-default-menu-container
  ul
    list-style none
    display flex
    justify-content flex-end
    li
      margin-left 15px

.index-header
  width 100%
  background-image url('/energiearmoede/wp-content/uploads/2016/11/headerbeeld.jpg')
  background-size cover
  background-position center
  height 70vh
  position relative

.header-title
  position absolute
  bottom 30px
  left 50px

.categories
  display flex
  flex-wrap wrap

.category-tile
  width 50%
  box-sizing border-box
  align-items center
  display flex
  a
    width 50%
    height 100%
  img
    width 100%
    height 100%

.category-tile:nth-of-type(3), .category-tile:nth-of-type(4)
  flex-direction row-reverse

.category-data
  text-align center
  width 50%
  padding 20px
  box-sizing border-box
  position relative

#category-header
  height 200px
  max-width 100%
