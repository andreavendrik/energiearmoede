// out: style.css, sourcemap: true, compress: true
yellow = #fdea4d
blue = #005A73
bluemiddle = #80ACB9
bluelight = #E5EEF1
black = #1E1E1E
broodtekstfont(font-size=16px, line-height=22px)
  font-size font-size
  line-height line-height
  font-family adelle sans, sans-serif
  font-weight 300
  color black

kopfont(font-size=40px, font-weight=200)
  font-family bree serif, sans-serif
  font-weight font-weight
  font-size font-size
  color black

*
  padding 0
  margin 0
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

body

a
  color blue
  &:hover
    color blue
    transition 0.3s

h1
  kopfont(40px, 400)
  color black

h2
  kopfont(35px)

h3
  kopfont(25px, 200)
  line-height 35px
  margin-top 30px
  margin-bottom 50px
  color black

h2 a
  text-decoration: none
  color black

h4
  text-transform uppercase
  broodtekstfont(12px,12px)
  margin 10px 0px 25px 0px

article
  broodtekstfont()

p
  broodtekstfont()

.site-wrapper
  max-width 1280px
  margin-left auto
  margin-right auto
  position relative

.navigation
  kopfont(16px,200)
  position fixed
  height 60px
  z-index 999
  background-color white
  display flex
  width 100%
  left 0
  justify-content space-between
  align-items center
  box-sizing border-box
  box-shadow 0px 0px 5px 1px rgba(30,30,30,0.2)
  a
    text-decoration none

#navigation-items
  max-width 1280px
  width 100%
  margin auto
  img
    width 190px
    border 1 px solid black
    box-shadow 0px 0px 5px 1px rgba(30,30,30,0.2)
    position absolute
    top 0
    margin-left 50px

.menu-default-menu-container
  ul
    list-style none
    display flex
    justify-content flex-end
    li
      margin-left 40px

.index-header
  width 100%
  background-image url('/energiearmoede/wp-content/uploads/2016/11/photo-1462003627669-87bee17e0b4e-1.jpeg')
  background-size cover
  background-position center
  height 85vh
  position relative

.header-title
  position absolute
  max-width 500px
  bottom 30px
  left 50px
  h1
    color white
  h3
    color white

.categories
  display flex
  flex-wrap wrap

.category-tile
  width 50%
  box-sizing border-box
  align-items center
  display flex
  background-color white
  a
    width 50%
    height 100%
  img
    width 100%
    height 100%

.category-tile:nth-of-type(3), .category-tile:nth-of-type(4)
  flex-direction row-reverse
  .category-data
    &:before
      right -20px
      left auto

.category-data
  text-align center
  width 50%
  padding 20px
  box-sizing border-box
  position relative
  &:before
    content ''
    width 40px
    height 40px
    background-color white
    position absolute
    top 0px
    left -20px
    transform rotate(45deg)
  p
    broodtekstfont()


#category-header
  min-height 200px
  max-width 100%
  padding 150px 20px 20px 50px
  box-sizing border-box
  background-color #B2CDD5
  background-position right top
  background-size contain
  background-repeat no-repeat
  h4
    text-transform lowercase
    kopfont(14px)
    a
      color black
  h2
    kopfont(25px)
    font-weight 600
  article
    margin-top 10px

#content
  position relative
  display flex
  flex-wrap wrap
  justify-content space-between
  box-sizing border-box
  width 100%
  padding 75px 100px 20px 100px
  background-color white
  h1
    kopfont(45px,400)
  article
    max-width 700px
    p
      broodtekstfont(18px, 30px)
      margin-top 20px
      &:first-of-type
        margin-top:40px

aside
  max-width 250px
  margin-right 20px
  kopfont(18px)
  line-height 26px
  ul
    list-style-type decimal
    list-style-position inside
    margin-top 40px

#prev-next-post-nav
  padding 10px 100px
  display flex
  justify-content space-between

#prev-post-nav
  svg
    transform rotate(180deg)
